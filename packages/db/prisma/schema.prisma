generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                    String      @default(uuid())      @id
  email                 String      @unique
  username              String      @unique
  password              String
  spaces                Spaces[]
  testimonials          TestimonialInformation[]

}

model Spaces {
  id                     Int                         @default(autoincrement())  @id
  name                   String
  displayName            String
  adminId                String
  admin                  User                        @relation(fields: [adminId], references: [id])
  testimonials           TestimonialInformation[]
  testimonailsQuestions  TestimonialFormQuestions[]
}       



model TestimonialInformation {
  id                  Int       @default(autoincrement())   @id
  adminId             String
  admin               User     @relation(fields: [adminId], references: [id])
  spaceId             Int
  space               Spaces    @relation(fields: [spaceId], references: [id])
  customername        String
  review              String
  customeremail       String
  videoUrl            String?
  customerimage       String?
  stars               Int
  approaved           Boolean   @default(false)
  createdAt           DateTime  @default(now())
  customerCompany     String?

}


model TestimonialFormQuestions {
  id                 Int        @default(autoincrement())    @id
  questionOne        String
  questionTwo        String
  questionThree      String
  space              Spaces       @relation(fields: [spaceId], references: [id])
  spaceId            Int
}